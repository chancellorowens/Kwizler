<project name="diary" default="deploy">

  <target name="clean">
    <delete dir="./classes/diary" />
    <delete dir="./test_classes/diary" />
  </target>

  <target name="run-test" depends="compile-test">
    <junit>
      <classpath>
	<pathelement location="test_classes"/>
	<pathelement location="classes"/>
      </classpath>
      <test name="diary.DBManagerTest"/>
      <test name="diary.DiaryTest"/>
      <formatter type="plain" usefile="false"/>
    </junit>
  </target>

  <target name="compile-implementation" depends="clean">
    <javac srcdir="src" destdir="classes" includeantruntime="true"/>
  </target>

  <target name="compile-test" depends="compile-implementation">
    <javac srcdir="test_src" destdir="test_classes" includeantruntime="true" >
      <classpath>
	<pathelement location="classes" />
      </classpath>
    </javac>
  </target>

  <target name="deploy" depends="run-test">
    <move file="classes/diary" todir="/var/lib/tomcat7/webapps/Kwizler/WEB-INF/classes"/>
    <copy file="jsp/index.jsp" todir="/var/lib/tomcat7/webapps/Kwizler"/>
    <copy file="/usr/share/ant/lib/mysql-connector-java-5.1.46.jar" todir="/Kwizler/WEB-INF/lib"/>
<!--    <copy file="/usr/share/ant/lib/mysql-connector-java-5.1.46.jar" todir="/usr/share/tomcat7/lib"/> --> 
    <copy file="/home/student/jstl-1.2.jar" todir="/Kwizler/WEB-INF/lib"/>
  </target>
</project>
